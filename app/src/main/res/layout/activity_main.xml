<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Prediksi Kelayakan Beasiswa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" />

        <!-- Avg Grade -->
        <TextView
            android:text="Nilai Rata-rata (Avg_Grade)"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inputAvgGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: 12.5"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp" />

        <!-- Medu -->
        <TextView
            android:text="Pendidikan Ibu (Medu)"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inputMedu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0 - 4"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp" />

        <!-- Fedu -->
        <TextView
            android:text="Pendidikan Ayah (Fedu)"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inputFedu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0 - 4"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="20dp" />

        <!-- Predict Button -->
        <Button
            android:id="@+id/btnPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediksi"
            android:padding="12dp"
            android:textSize="18sp"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF" />

        <!-- Output -->
        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="30dp" />

    </LinearLayout>

</ScrollView>
